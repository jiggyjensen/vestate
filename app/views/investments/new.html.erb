<div class="banner-show" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2)), url(<%= url_for(@property.photos.first) %>);"></div>

<div class='d-flex justify-content-center p-5'>
  <div class="card-new-investment align-items-center mr-2 p-5">
    <h4> Accept Terms and Conditions </h4>
    <iframe src='<%= asset_url("tac.pdf")%>'></iframe>
  </div>
  <div class="card-new-investment align-items-center ml-2 p-5">
    <h4> Confirm Investment Amount </h4>
    <%= simple_form_for([@property, @investment ])  do |form| %>
    <div class= "form-group" >
     <%= form.input :amount, label: "Investment Amount", class: "form-control" %> </div>
     <div class= "form-group form-check" >
       <%= form.check_box :terms_accepted, class: "form-check-input" %>
       <%= form.label "I agree with the terms and conditions", class: "form-check-label" %>
     </div>
     <%= form.button :submit, 'Confirm investment', class: "btn btn-success btn-radius w-100" %>
     <% end %>
   </div>
 </div>



