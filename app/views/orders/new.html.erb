<div class="banner-show mb-0">
 <% if @investment.property.photos.attached? %>
 <div id="carousel-<%= @investment.property.id %>" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <% @investment.property.photos.each_with_index do |photo, index| %>
    <li data-target="#carousel-<%= @investment.property.id %>" data-slide-to="0" class="<%= "active" if index == 0 %>"></li>
    <% end %>
  </ol>
  <div class="carousel-inner">
    <% @investment.property.photos.each_with_index do |photo, index| %>
    <div class="carousel-item <%= "active" if index == 0 %>">
      <%= cl_image_tag photo.key, alt: "Image of the property", class: "banner-show-img w-100" %>
    </div>
    <% end %>
    <a class="carousel-control-prev" href="#carousel-<%= @investment.property.id %>" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carousel-<%= @investment.property.id %>" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>
<% else %>
<%= image_tag "https://www.ukmoths.org.uk/site/templates/includes/images/noimageyet420.png", class: "card-property-img d-block w-100"%>
<% end %>
</div>

<div class="text-center text-banner">
<h1>Are you sure?</h1>
<%= form_tag orders_path do %>
  <%= hidden_field_tag 'investment_id', @investment.id %>
  <%= submit_tag 'Confirm Investment', class: 'btn-success' %>
<% end %>
</div>
