
<div class="banner-show" style="background-image: url(https://images.unsplash.com/photo-1555882422-3af55f50fab1?crop=entropy&cs=tinysrgb&fit=crop&fm=jpg&h=900&ixid=eyJhcHBfaWQiOjF9&ixlib=rb-1.2.1&q=80&w=1600);">
  <div class="days-banner">
    <p><%=@property.days_left%> days left</p>
  </div>
  <div class=" button-banner-show text-center">
  <%= link_to "Invest now", new_property_investment_path(@property), class: "btn btn-success" %>
  </div>
</div>
<div class="container bg-white">
<div class="show-card bg-white">
  <div class="meter mt-3 mx-5">
    <span class="percentage pl-4 pt-1"style="width: <%= @property.percentage_achieved%>%"><%=@property.percentage_achieved%>%</span>
  </div>
  <h2 class="text-center border-bottom pt-3"> <%=@property.name%></h2>

  <p class=" text-center border-bottom mx-5"> <%=@property.description%></p>
</div>
<div class="container bg-white">
  <div class="d-flex justify-content-around">
    <div class ="d-flex justify-content-around card-show text-center">
      <div>
      <h2>ROI</h2>
      <h3 class="border-right"></h3>
      <%= pie_chart @property.percentage_achieved %>
      </div>
      <div>
        <h2>Raised</h2>
        <h3 class=""><%#= pie_chart @property.total_amount_invested %></h3>
      </div>
    </div>
    <div class="card-show text-center">
      <h3 class="p-3 ">Download documents</h3>
    </div>
  </div>
  <div class="d-flex justify-content-between">
    <div class=" card-show">
      <p class="text-center"> <%=@property.location%></p>
      <h3 class="p-3 text-center align-center"><%= @property.area_description%></h3>
    </div>
    <div
    id="map"
    class="show-map card-show"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    ></div>
  </div>

</div>
<div class="d-flex justify-content-center my-3"><%= link_to "Invest now", new_property_investment_path(@property), class: "btn btn-success" %></div>
</div>
